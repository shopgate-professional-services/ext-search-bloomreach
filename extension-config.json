{
  "version": "1.0.5",
  "id": "@shopgate-project/search-bloomreach",
  "components": [
    {
      "id": "Subscribers",
      "path": "frontend/subscriptions.js",
      "type": "subscribers"
    }
  ],
  "configuration": {
    "auth_key": {
      "type": "admin",
      "destination": "backend",
      "default": "",
      "params": {
        "label": "Bloomreach API auth_key",
        "type": "text"
      }
    },
    "domain_key": {
      "type": "admin",
      "destination": "backend",
      "default": "",
      "params": {
        "label": "Bloomreach API domain_key",
        "type": "text"
      }
    },
    "account_id": {
      "type": "admin",
      "destination": "backend",
      "default": "",
      "params": {
        "label": "Bloomreach account_id",
        "type": "text"
      }
    },
    "url": {
      "type": "admin",
      "destination": "backend",
      "default": "https://www.example.com",
      "params": {
        "label": "The absolute URL of the page where the request is made.",
        "type": "text"
      }
    },
    "ref_url": {
      "type": "admin",
      "destination": "backend",
      "default": "",
      "params": {
        "label": "The URL of the HTTP referrer for the webpage where the request is made. You must pass this parameter, but you can send it empty.",
        "type": "text"
      }
    },
    "useSearchSuggestions": {
      "type": "admin",
      "destination": "backend",
      "default": true,
      "params": {
        "label": "Flag if search suggestions should be used or not",
        "type": "checkbox"
      }
    },
    "useStaging": {
      "type": "admin",
      "destination": "backend",
      "default": false,
      "params": {
        "label": "Flag if staging endpoint should be used",
        "type": "checkbox"
      }
    }
  }
}
